{% extends 'admin/base_admin.html.twig' %}

{% block body %}
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="{{ path('admin_slide_list') }}">
                <i class="fa fa-backward"></i> Revenir dans la liste
            </a>
        </div>
        <div class="card-body">
           {{ form_start(form) }}
                {{ form_widget(form) }}
            <input type="submit" class="btn btn-primary" value="Enregistrer">
            {{ form_end(form) }}
        </div>

        {% if slide.id %}
            <div class="card-body">
                <h3 class="text-decoration-underline">Informations courant :</h3>
                <p>Alt : {{ slide.alt }}</p>
                <p>Description : {{ slide.description }}</p>
                <img width="200" height="100" src="{{ asset('images/'~slide.image) }}" alt="">
            </div>
        {% endif %}
    </div>
{% endblock %}